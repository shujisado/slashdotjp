padding:-0pt !important;
}
span.nbutton p b a {
line-height:2em !important;
}


div.paginate span.nbutton { /*homepage only: aligning .nbutton correctly*/
margin:-.25em 2em !important;
}


div#discussion_buttons span.nbutton{ /*TEMPORARY*/
