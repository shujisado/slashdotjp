DROP TABLE IF EXISTS humanconf_questions;
CREATE TABLE humanconf_questions (
	hcqid		SMALLINT UNSIGNED NOT NULL AUTO_INCREMENT,
	filedir		CHAR(255) NOT NULL,
	urlprefix	CHAR(255) NOT NULL,
	question	TEXT NOT NULL,
	PRIMARY KEY(hcqid)
) TYPE = InnoDB;

