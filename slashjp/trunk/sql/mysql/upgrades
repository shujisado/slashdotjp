UPDATE sections SET defaultsubsection='0' WHERE defaultsubsection IS NULL;
ALTER TABLE sections CHANGE COLUMN defaultsubsection defaultsubsection SMALLINT UNSIGNED DEFAULT '0' NOT NULL;

